<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <include file="$(find-pkg-share r2d2_description)/launch/description.launch.py"/>

  <node pkg="fuse_optimizers" exec="fixed_lag_smoother_node" name="fls_node_tier1" namespace="r2d2">
    <param name="use_sim_time" value="true"/>
    <param from="$(find-pkg-share task7)/config/two_tier.yaml"/>
  </node>

  <node pkg="fuse_optimizers" exec="fixed_lag_smoother_node" name="fls_node_tier2" namespace="r2d2">
    <param name="use_sim_time" value="true"/>
    <param from="$(find-pkg-share task7)/config/two_tier.yaml"/>
  </node>

  <node pkg="robot_localization" exec="ekf_node" name="ekf_node_tier2" namespace="r2d2">
    <param name="use_sim_time" value="true"/>
    <param from="$(find-pkg-share task3)/config/two_tier.yaml"/>
    <param name="publish_tf" value="false"/>
    <remap from="odometry/filtered" to="odometry/filtered_tier2_ekf"/>
  </node>

  <node pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share task7)/config/two_tier.rviz" name="rviz">
    <param name="use_sim_time" value="true"/>
  </node>

</launch>
